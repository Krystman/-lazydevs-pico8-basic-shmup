pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
function _init()
 --this will clear the screen
 cls(0)
 harry=40
 speed=2
end

function _update()
 --controls
 speed=0
 if btn(0) then
  speed=-2
 end
 if btn(1) then
  speed=2
 end
 
 --moving the ship
 harry=harry+speed
 
 --checking if we hit the edge
 if harry>120 then
  harry=120
 end
 if harry<0 then
  harry=0
 end
end

function _draw()
 cls(0) 
 spr(1,harry,64)
end




